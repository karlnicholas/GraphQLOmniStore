type Query {
    # 1. ADD THIS LINE:
    products: [Product]

    # Aggregated Product that contains everything
    product(id: ID!): Product
}

type Product {
    id: ID!
    name: String
    price: String

    # These fields come from OTHER services!
    inventory: Inventory
    reviews: [Review]
}

type Inventory {
    quantity: Int
    location: String
}

type Review {
    author: String
    comment: String
    starRating: Int
}